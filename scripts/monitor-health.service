[Unit]
Description=Escalation League Health Monitor
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
User=ghaima
WorkingDirectory=/home/ghaima/code/escalation-league
ExecStart=/home/ghaima/code/escalation-league/scripts/monitor-health.sh prod
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
